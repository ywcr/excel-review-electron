{
  "name": "excel-review-electron",
  "version": "1.0.0",
  "description": "Excel审核系统 - Electron桌面版",
  "author": "ywcr",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder --config electron-builder.config.js",
    "build:lite": "tsc && vite build && cross-env BUILD_VARIANT=lite electron-builder --config electron-builder.config.js",
    "build:full": "tsc && vite build && cross-env BUILD_VARIANT=full electron-builder --config electron-builder.config.js",
    "preview": "vite preview",
    "build:mac": "npm run build:full && electron-builder --mac --config electron-builder.config.js",
    "build:win": "npm run build:full && electron-builder --win --config electron-builder.config.js"
  },
  "dependencies": {
    "@types/yauzl": "^2.10.3",
    "adm-zip": "^0.5.16",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.7",
    "exceljs": "^4.4.0",
    "jszip": "^3.10.1",
    "onnxruntime-node": "^1.23.2",
    "p-limit": "^7.2.0",
    "pako": "^2.1.0",
    "readable-stream": "^3.6.2",
    "setimmediate": "^1.0.5",
    "sharp": "^0.34.5",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^20.19.27",
    "@types/pako": "^2.0.4",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^10.1.0",
    "electron": "^33.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.excel.review",
    "productName": "Excel审核系统",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "dist-electron"
    ],
    "asarUnpack": [
      "node_modules/sharp/**/*",
      "node_modules/onnxruntime-node/**/*"
    ],
    "extraResources": [
      {
        "from": "electron/models",
        "to": "models",
        "filter": [
          "**/*.onnx",
          "**/*.json"
        ]
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "build/icon.png"
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
